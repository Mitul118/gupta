#include<iostream>
using namespace std;

int main()
{
	int at[],bt[],p[],n,t,i,j;
	cout<<"Enter the number of process";
	cin>>n;
	cout<<"Enter the process number, arrival time and burst time."
	for(i=0;i<n;i++)
	{
		cin>>p[i]>>at[i]>>bt[i];
	}
	for(j=0;j<n-1;j++)
	{
		for(i=j+1;i<n-1;i++)
		{
			if(at[i]>at[i+1])
			{
				x=at[i];
				y=bt[i];
				z=p[i];
			
				at[i]=at[i+1];
				bt[i]=bt[i+1];
				p[i]=p[i+1];
			
				at[i+1]=x;
				bt[i+1]=y;
				p[i+1]=z;
			}
		}
	}
	
}
